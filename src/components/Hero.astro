---
import { profile } from "../data/site";
---

<section class="flex min-h-[85vh] items-center pt-20">
  <div class="mx-auto w-full max-w-6xl px-6">
    <!-- Terminal-style status label -->
    <div
      class="mb-6 inline-flex items-center gap-2 rounded-full border border-cyber-emerald/30 bg-cyber-emerald/10 px-4 py-1.5"
    >
      <span class="h-2 w-2 animate-pulse rounded-full bg-cyber-emerald"></span>
      <span class="font-mono text-sm text-cyber-emerald">
        SYSTEM ONLINE — {profile.handle}
      </span>
    </div>

    <!-- Name heading -->
    <h1
      class="mb-4 text-5xl font-extrabold tracking-tight text-text-primary md:text-7xl lg:text-8xl"
    >
      <span class="text-gradient-cyber">{profile.name}</span>
    </h1>

    <!-- Catchphrase -->
    <p class="mb-6 max-w-3xl font-mono text-lg text-cyber-cyan md:text-xl lg:text-2xl">
      {profile.catchphrase}
    </p>

    <!-- Description -->
    <p class="mb-10 max-w-2xl text-lg leading-relaxed text-text-secondary">
      {profile.status}。<br />
      {profile.orientation}
    </p>

    <!-- CTA buttons -->
    <div class="flex flex-wrap gap-4">
      <a
        href="#projects"
        class="inline-flex items-center gap-2 rounded-lg border border-cyber-cyan bg-cyber-cyan/10 px-6 py-3 font-mono text-sm font-medium text-cyber-cyan transition-all hover:bg-cyber-cyan/20 hover:glow-cyan"
      >
        <span>Projects を見る</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-4 w-4"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M19 9l-7 7-7-7"></path>
        </svg>
      </a>
      <a
        href="#skills"
        class="inline-flex items-center gap-2 rounded-lg border border-border-default px-6 py-3 font-mono text-sm font-medium text-text-secondary transition-all hover:border-text-muted hover:text-text-primary"
      >
        Skills
      </a>
    </div>
  </div>
</section>
