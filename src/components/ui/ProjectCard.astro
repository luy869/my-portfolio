---
import SkillBadge from "./SkillBadge.astro";

export interface Props {
  title: string;
  description: string;
  tags: string[];
  featured?: boolean;
}

const { title, description, tags, featured = false } = Astro.props;
---

<article class="group flex flex-col rounded-lg border border-border-default bg-bg-secondary p-6 transition-colors hover:border-border-default hover:bg-bg-card">
  <h3 class="mb-2 text-base font-semibold text-text-primary group-hover:text-accent transition-colors">
    {title}
  </h3>

  <p class="mb-4 flex-1 text-sm leading-relaxed text-text-muted">
    {description}
  </p>

  <div class="flex flex-wrap gap-1.5">
    {tags.map((tag) => <SkillBadge text={tag} />)}
  </div>
</article>
