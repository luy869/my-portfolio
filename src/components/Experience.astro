---
import SectionHeading from "./ui/SectionHeading.astro";
import { experience, hobbies } from "../data/site";
---

<section id="experience" class="scroll-mt-24 py-16">
  <div class="mx-auto max-w-4xl px-6">
    <SectionHeading title="Experience" />

    <div class="space-y-6">
      {
        experience.map((item) => (
          <div class="flex flex-col gap-1 rounded-lg border border-border-default bg-bg-secondary p-5">
            <h3 class="text-base font-semibold text-text-primary">
              {item.title}
            </h3>
            <p class="text-sm text-text-muted">{item.role}</p>
            {item.period && (
              <p class="text-xs text-text-muted">{item.period}</p>
            )}
          </div>
        ))
      }
    </div>

    <div class="mt-12">
      <h3 class="mb-4 text-sm font-medium text-text-primary">Interests</h3>
      <div class="flex flex-wrap gap-2">
        {
          hobbies.map((hobby) => (
            <span class="rounded-full bg-bg-card px-3 py-1 text-xs text-text-muted">
              {hobby}
            </span>
          ))
        }
      </div>
    </div>
  </div>
</section>
